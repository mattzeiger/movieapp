<%- include layouts/header.ejs %>
	<div class = "page-header">
		
		<h1><%
			var name = '';
			var address = '';
			var phone = '';
			var email = '';
			var mode = 'add';
			if (typeof customer !== 'undefined') {
				mode = 'edit'
				name = customer.name;
				address = customer.address;
				phone = customer.phone;
				email = customer.email;
				%>Edit<%
			} else {
				%>Add<%
			}
			%> Customers: </h1>
	</div>
	
	<form action = "/customers/add" class="form-signin" method = "POST">
		
	       <h2 class="form-signin-heading"><%if(mode == 'edit') { %><input type = "hidden" name = "inputID" id = "inputID" value = "<%=customer.id%>" />Please edit your customer's info<% } else { %>Please add in your customer's info<% } %></h2>
        <label for="inputName" class="sr-only">Name</label>
        <input type="text" name = "inputName" id="inputName" class="form-control" placeholder="Name" value = "<%= name %>" required autofocus>
		<label for="inputAddress" class="sr-only">Address</label>
        <input type="text" name = "inputAddress" id="inputAddress" class="form-control" placeholder="Address" value = "<%= address %>" required autofocus>
		<label for="inputPhone" class="sr-only">Phone</label>
        <input type="text" name = "inputPhone" id="inputPhone" class="form-control" placeholder="Phone" value = "<%= phone %>" required autofocus>
		<label for="inputEmail" class="sr-only">Email</label>
        <input type="text" name = "inputEmail" id="inputEmail" class="form-control" placeholder="Email" value = "<%= email %>" required autofocus>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
      </form>
<%- include layouts/footer.ejs %>	